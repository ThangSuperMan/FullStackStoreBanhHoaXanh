    <div class="container">
        <%- include("layouts/header") %>
        <h2 class="title">Trang quản lý snack</h2>

        <a href="/admin/add_snack" class="new-snack">
            <span>Thêm bánh mới</span>
            <i class="fas fa-carrot"></i>
        </a>
        <!--<form action="/admin/delete_snack" method="POST" class="form">-->
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Hình sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Gía sản phẩm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                
                    <% snacks.forEach((snack) => { %>
                    <tr>
                        <td><%= snack.id %></td>
                        <td>
                            <img src="/images/<%= snack.imageSnack %>" alt="">
                        </td>
                        <td><%= snack.nameSnack %></td>
                        <td><%= snack.priceSnack %></td>
                        <td>
                            <a href="/admin/edit_snack/<%= snack.id%>" class="button button-update">
                                <span class="text-gradient">
                                    <i class="fas fa-pencil-alt"></i>
                                </span>
                            </a>
                            <form action="/admin/delete_snack/" method="POST">
                                <input type="hidden" name="snackId" value="<%= snack.id %>" />
                            <button type="submit" class="button button-delete">
                                <span class="text-gradient">
                                    <i class="fas fa-times"></i>
                                </span>
                            </button>
                        </form>

                        </td>
                    </tr>
                    <%})%>

